conky.config = {
	  background = true,
	  update_interval = 1.5,
	  cpu_avg_samples = 2,
	  net_avg_samples = 2,
	out_to_console = false,
	override_utf8_locale = true,
	  double_buffer = true,
	no_buffers = true,
	text_buffer_size = 32768,
	imlib_cache_size = 0,
	  own_window = true,
	  own_window_type = dock,
	  own_window_argb_visual = true,
	  own_window_argb_value = 216,
	  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	  border_inner_margin = 10,
	  border_outer_margin = 0,
	xinerama_head = 2,
	alignment = 'bottom_left',
	gap_x = 30,
	gap_y = 30,
	draw_shades = true,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	use_xft = true,
	font = 'Hack:size=10',
	uppercase = false,
	default_color = '#e8e6df',
	own_window_colour = '#1d2026',
	minimum_width = 0, minimum_height = 0,
};
conky.text = [[
	${color #00e1ff}waltzforvenus${color}${goto 200}${font FontAwesome}${font} ${time %m.%d.%y}    ${font 
FontAwesome}${font} ${time %H:%M}
	${hr}
	${font FontAwesome}${font}${voffset -2} ${addrs wlp4s0}
	${goto 20}${upspeedgraph wlp4s0 30,178 FFA9B8 BD00CE}${goto 
202}${downspeedgraph wlp4s0 30,175 00E1FF 0038A8}
	${font FontAwesome}${goto 20}${font} ${upspeed wlp4s0}${font FontAwesome}${goto 202}${font} ${downspeed 
wlp4s0}
	${hr}
	${font FontAwesome}${font}${voffset -2}
	${goto 20}${diskiograph_read 30,178 00E1FF 0038A8}${goto 202}${diskiograph_write 30,175 FFA9B8 BD00CE}
	${font FontAwesome}${goto 20}${font} ${diskio_read}${font FontAwesome}${goto 202}${font} ${diskio_write}
	${hr}
	${font FontAwesome}${font}${voffset -2} ${mem}/${memmax} (${memperc}%) | Swap: ${swapperc}%
	${goto 20}${memgraph 30,355 00E1FF 0038A8}
	${hr}
	${goto 20}CPU0: ${exec sensors -f | grep 'Core 0' | cut -c16-18}°F/${cpu cpu0}%${goto 160}${cpubar 7,60 cpu0}${goto 222}CPU4: ${cpu cpu4}%${goto 302}${cpubar 7,60 cpu4}
	${goto 20}CPU1: ${cpu cpu1}%${goto 100}${cpubar 7,60 cpu1}${goto 222}CPU5: ${cpu cpu5}%${goto 302}${cpubar 7,60 cpu5}
	${goto 20}CPU2: ${cpu cpu2}%${goto 100}${cpubar 7,60 cpu2}${goto 222}CPU6: ${cpu cpu6}%${goto 302}${cpubar 7,60 cpu6}
	${goto 20}CPU3: ${cpu cpu3}%${goto 100}${cpubar 7,60 cpu3}${goto 222}CPU7: ${cpu cpu7}%${goto 302}${cpubar 7,60 cpu7}
	${hr}
	${color #00e1ff}${goto 20}Name ${goto 200}PID${goto 255}CPU%${goto 310}Mem%${color}
	${goto 20}${top name 1} ${goto 180}${top pid 1}${goto 235}${top cpu 1}${goto 290}${top mem 1}
	${goto 20}${top name 2} ${goto 180}${top pid 2}${goto 235}${top cpu 2}${goto 290}${top mem 2}
	${goto 20}${top name 3} ${goto 180}${top pid 3}${goto 235}${top cpu 3}${goto 290}${top mem 3}
	${goto 20}${top name 4} ${goto 180}${top pid 4}${goto 235}${top cpu 4}${goto 290}${top mem 4}
	${goto 20}${top name 5} ${goto 180}${top pid 5}${goto 235}${top cpu 5}${goto 290}${top mem 5}

]];
